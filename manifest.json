{
    "manifest_version": 2,
    "name": "Stickies",
    "version": "1.0",
    "description": "take notes on your browser pages",
    "content_scripts": [
        {
            
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["notepad.js"]
    },
     "browser_action": {
        "default_icon": "/images/note128.png",
        "default_popup": "popup.html",
        "default_title": "A popup will come here."
      },
   
      "permissions": ["activeTab", "storage"]
}